<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="6">
  <description>Verifies that a product is in the cart in a specified count.</description>
  <parameter name="index"/>
  <parameter name="productName"/>
  <parameter name="productCount"/>
  <parameter name="productFinish"/>
  <parameter name="productSize"/>
  <action name="OpenCartOverview"/>
  <command name="clickAndWait" target="id=headerCartOverview"/>
  <command name="assertText" target="id=productName@{index}" value="@{productName}"/>
  <command name="assertValue" target="css=.productCount@{index}" value="@{productCount}"/>
  <command name="assertText" target="id=productFinish@{index}" value="@{productFinish}"/>
  <command name="assertText" target="id=productSize@{index}" value="@{productSize}"/>
</scriptmodule>