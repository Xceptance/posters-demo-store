<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="6">
  <description>Selects one category randomly.</description>
  <action name="SelectCategoryRandomly"/>
  <command name="storeXpathCount" target="//ul[@id='categoryMenu']/li" value="categoryCount"/>
  <command name="store" target="${RANDOM.Number(1,${categoryCount})}" value="categoryIndex"/>
  <command name="storeXpathCount" target="//ul[@id='categoryMenu']/li[${categoryIndex}]/ul/li" value="subCategoryCount"/>
  <command name="store" target="${RANDOM.Number(1,${subCategoryCount})}" value="subCategoryIndex"/>
  <command name="click" target="//ul[@id='categoryMenu']/li[${categoryIndex}]/a"/>
  <command name="clickAndWait" target="//ul[@id='categoryMenu']/li[${categoryIndex}]/ul/li[${subCategoryIndex}]/a"/>
</scriptmodule>