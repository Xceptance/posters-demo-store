<?xml version="1.0" encoding="UTF-8"?>
<testcase xmlns="http://xlt.xceptance.com/xlt-script/2" version="6" baseURL="http://localhost:8080">
  <description>Simulates browsing the catalog, adding product(s) to the cart, log in and get one cart which includes the products added just now and the products of the customer's cart.</description>
  <module name="posters.functional.modules.OpenHomepage"/>
  <module name="posters.functional.modules.Login">
    <parameter name="email" value="${email}"/>
    <parameter name="password" value="${password}"/>
    <parameter name="firstName" value="${firstName}"/>
  </module>
  <module name="posters.functional.modules.AddToCart"/>
  <action name="OpenCartOverview"/>
  <command name="clickAndWait" target="id=headerCartOverview"/>
  <command name="storeText" target="id=productName0" value="product1Name"/>
  <command name="assertText" target="id=btnCartOverview" value="regexp:.*1.*-.*"/>
  <module name="posters.functional.modules.Logout"/>
  <command name="assertText" target="id=btnCartOverview" value="regexp:.*0.*-.*"/>
  <module name="posters.functional.modules.AddToCart"/>
  <action name="OpenCartOverview"/>
  <command name="clickAndWait" target="id=headerCartOverview"/>
  <command name="storeText" target="id=productName0" value="product2Name"/>
  <command name="assertText" target="id=btnCartOverview" value="regexp:.*1.*-.*"/>
  <module name="posters.functional.modules.Login">
    <parameter name="email" value="${email}"/>
    <parameter name="password" value="${password}"/>
    <parameter name="firstName" value="${firstName}"/>
  </module>
  <action name="GetMergedCart"/>
  <command name="clickAndWait" target="id=headerCartOverview"/>
  <command name="assertText" target="id=productName0" value="${product2Name}"/>
  <command name="assertValue" target="css=.productCount0" value="1"/>
  <command name="assertText" target="id=productName1" value="${product1Name}"/>
  <command name="assertValue" target="css=.productCount1" value="1"/>
  <command name="assertText" target="id=btnCartOverview" value="regexp:.*2.*-.*"/>
  <action name="RemoveProductFromCart"/>
  <command name="click" target="id=btnRemoveProduct0"/>
  <action name="RemoveProductFromCart"/>
  <command name="click" target="id=btnRemoveProduct1"/>
  <command name="waitForText" target="id=btnCartOverview" value="regexp:.*0.*-.*"/>
</testcase>