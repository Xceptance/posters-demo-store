<?xml version="1.0" encoding="UTF-8" ?>
<testcase version="3" baseURL="http://localhost:8080" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Simulates browsing the catalog, adding product(s) to the cart and checkout as guest without final order placement.</description>
  <action name="OpenStartPage"/>
  <command name="open" value="/"/>
  <command name="assertText" target="id=titleIndex" value="Check out our new panorama posters!"/>
  <action name="Browse-0"/>
  <command name="clickAndWait" target="link=Trees"/>
  <command name="clickAndWait" target="//*[@id='product0']//img"/>
  <command name="assertText" target="id=titleProductName" value="Fall Leaves I"/>
  <action name="AddToCart-0"/>
  <command name="clickAndWait" target="id=btnAddToCart"/>
  <command name="assertText" target="id=titleBasket" value="Cart"/>
  <command name="assertText" target="id=productName0" value="Fall Leaves I"/>
  <command name="assertText" target="//*[contains(@class,'productCount0')]" value="1"/>
  <action name="Browse-1"/>
  <command name="clickAndWait" target="link=Air Travel"/>
  <command name="assertText" target="id=titleCategoryName" value="Air Travel"/>
  <command name="clickAndWait" target="//*[@id='product3']//img"/>
  <command name="assertText" target="id=titleProductName" value="Air Greenland Airbus A330-200"/>
  <action name="AddToCart-1"/>
  <command name="clickAndWait" target="id=btnAddToCart"/>
  <command name="assertText" target="id=productName1" value="Air Greenland Airbus A330-200"/>
  <command name="assertText" target="//*[contains(@class,'productCount1')]" value="1"/>
  <action name="StartCheckout"/>
  <command name="clickAndWait" target="id=btnStartCheckout"/>
  <action name="EnterShippingAddress"/>
  <module name="module.FillInAddressForm">
    <parameter name="name" value="John Doe"/>
    <parameter name="company" value="John Doe Inc."/>
    <parameter name="address" value="5-6 John Doe Street"/>
    <parameter name="city" value="New York"/>
    <parameter name="state" value="NY"/>
    <parameter name="zip" value="12345"/>
  </module>
  <command name="select" target="id=country" value="label=United States"/>
  <command name="check" target="id=billEqualShipp-No"/>
  <command name="clickAndWait" target="id=btnAddDelAddr"/>
  <action name="EnterBillingAddress"/>
  <command name="assertElementPresent" target="id=titleBillAddr"/>
  <module name="module.FillInAddressForm">
    <parameter name="name" value="John Doe"/>
    <parameter name="company" value="John Doe Inc."/>
    <parameter name="address" value="5-6 John Doe Street"/>
    <parameter name="city" value="New York"/>
    <parameter name="state" value="NY"/>
    <parameter name="zip" value="12345"/>
  </module>
  <command name="select" target="id=country" value="label=United States"/>
  <command name="clickAndWait" target="id=btnAddBillAddr"/>
  <action name="EnterPaymentMethod"/>
  <command name="assertElementPresent" target="id=titlePayment"/>
  <module name="module.FillInPaymentForm">
    <parameter name="number" value="4111111111111111"/>
    <parameter name="name" value="John Doe"/>
    <parameter name="month" value="08"/>
    <parameter name="year" value="2022"/>
  </module>
  <command name="clickAndWait" target="id=btnAddPayment"/>
  <action name="OrderOverview"/>
  <command name="assertElementPresent" target="id=titleOrderOverview"/>
  <command name="assertElementPresent" target="id=product0"/>
  <command name="assertElementPresent" target="id=product1"/>
  <command name="assertNotElementPresent" target="id=product2"/>
  <command name="assertText" target="id=product0Count" value="1"/>
  <command name="assertText" target="id=product1Count" value="1"/>
  <command name="assertText" target="id=delAddr" value="Shipping Addresses John Doe John Doe Inc. 5-6 John Doe Street New York, NY 12345 United States"/>
  <command name="assertText" target="id=billAddr" value="Billing Addresses John Doe John Doe Inc. 5-6 John Doe Street New York, NY 12345 United States"/>
  <command name="assertText" target="id=payment" value="glob:Payment Settings Name: John Doe Credit card: xxxx xxxx xxxx 1111 Valid to: 08 2022"/>
</testcase>
