<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Verifies the cart slider.</description>
  <parameter name="index"/>
  <parameter name="productName"/>
  <parameter name="productFinish"/>
  <parameter name="productPrice"/>
  <parameter name="productCount"/>
  <parameter name="productSize"/>
  <parameter name="totalPrice"/>
  <command name="click" target="id=slidingTopTriggerShow"/>
  <command name="waitForVisible" target="//ul[@id='cartElementList']/li[@{index}]"/>
  <command name="waitForText" target="//ul[@id='cartElementList']/li[@{index}]/span[@id='sliderProdName']" value="@{productName}"/>
  <command name="assertText" target="//ul[@id='cartElementList']/li[@{index}]/span[@id='sliderProdName']" value="@{productName}"/>
  <command name="assertText" target="//ul[@id='cartElementList']/li[@{index}]/span[@id='sliderProdFinish']" value="@{productFinish}"/>
  <command name="assertText" target="//ul[@id='cartElementList']/li[@{index}]/span[@id='sliderProdPrice']" value="@{productPrice}"/>
  <command name="assertText" target="//ul[@id='cartElementList']/li[@{index}]/span[@id='sliderProdCount']" value="@{productCount}"/>
  <command name="assertText" target="id=cartSliderTotalPrice" value="@{totalPrice}"/>
  <command name="click" target="id=slidingTopTriggerHide"/>
</scriptmodule>